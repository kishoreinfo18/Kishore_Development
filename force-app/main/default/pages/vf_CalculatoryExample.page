<apex:page controller="CalculatorEx">
  <!-- Begin Default Content REMOVE THIS -->
  <h1>Congratulations</h1>
  This is your new Page
  <!-- End Default Content REMOVE THIS -->
  <apex:form >
      <apex:pageBlock >
      <apex:pageBlockButtons >
                  <apex:commandButton value="Add" action="{!add}"/>
      </apex:pageBlockButtons>
              
          <apex:pageBlockSection title="Calculator" columns="1">
              <apex:pageBlockSectionItem >
                  <apex:outputLabel Value="Enter A Value:"/>
                  <apex:inputText value="{!a}"/>
              </apex:pageBlockSectionItem>
              <apex:pageBlockSectionItem >
                  <apex:outputLabel value="Enter B Value:"/>
                  <apex:inputText value="{!b}"/>
              </apex:pageBlockSectionItem> 
              <apex:pageBlockSectionItem >
                      <apex:outputLabel Value="C Value is:"/>
                      <apex:outputLabel value="{!c}"/>
              </apex:pageBlockSectionItem>
          </apex:pageBlockSection>
      </apex:pageBlock>    
  </apex:form>
</apex:page>